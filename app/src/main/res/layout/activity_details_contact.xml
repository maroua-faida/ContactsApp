<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ajouter_contact"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/champ">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:src="@drawable/baseline_star_24"
            />
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:src="@drawable/baseline_share_24"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/rImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingBottom="130dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prenom "
            android:textSize="30dp"
            android:paddingTop="30dp"
            android:paddingRight="5dp"
            android:textColor="@color/rose"/>
        <TextView
            android:id="@+id/last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nom"
            android:textSize="30dp"
            android:paddingTop="30dp"
            android:textColor="@color/rose"/>
    </LinearLayout>


    <TextView
        android:id="@+id/job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service du contact"
        android:textSize="30dp"
        android:textColor="@color/rose"
        android:paddingTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_local_phone_24" />

        <ImageView
            android:id="@+id/sms"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_textsms_24" />
        <ImageView
            android:id="@+id/email"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_alternate_email_24" />
        <ImageView
            android:id="@+id/whats"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_message_24" />


    </LinearLayout>
</LinearLayout>