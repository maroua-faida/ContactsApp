<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".inscription"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/champ">


    <LinearLayout
        android:id="@+id/layout_acc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" New Account"
            android:textSize="30dp"
            android:textColor="@color/rose"
            android:padding="20dp"/>
        <EditText
            android:id="@+id/firstname_acc"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textSize="20dp"
            android:padding="20dp"
            android:textColor="@color/rose"
            android:textColorHint="@color/rose"/>
        <EditText
            android:id="@+id/lastname_acc"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textSize="20dp"
            android:padding="20dp"
            android:textColor="@color/rose"
            android:textColorHint="@color/rose"/>
        <EditText
            android:id="@+id/birthdate_acc"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Birth Date"
            android:inputType="date"
            android:textSize="20dp"
            android:padding="20dp"
            android:src="@drawable/baseline_calendar_month_24"
            android:textColor="@color/rose"
            android:textColorHint="@color/rose"
            />
        <EditText
            android:id="@+id/username_acc"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textSize="20dp"
            android:padding="20dp"
            android:textColor="@color/rose"
            android:textColorHint="@color/rose"/>
        <EditText
            android:id="@+id/password_acc"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            
            android:hint="Password"
            android:textSize="20dp"
            android:padding="20dp"
            android:textColor="@color/rose"
            android:textColorHint="@color/rose"/>
        <Button
            android:id="@+id/btt_singapp_acc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/powder_blue"
            android:text="sign up"
            android:onClick="sign_up_acc"/>
        <Button
            android:id="@+id/btt_cancel_acc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/champ"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:text="cancel"/>
    </LinearLayout>

</LinearLayout>